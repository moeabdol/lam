<h1>Edit your profile</h1>

<form action="/edit" method="post">
  <div class="form-group">
    <input name="displayName" type="text" class="form-control"
      placeholder="Display name" value="{{currentUser.displayName}}">
  </div>
  <div class="form-group">
    <textarea name="bio" class="form-control" placeholder="Tell us about yourself!">{{#if currentUser.bio}}{{currentUser.bio}}{{/if}}</textarea>
  </div>
  <input type="submit" value="Update" class="btn btn-primary btn-block">
</form>
